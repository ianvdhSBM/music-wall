<div class="container"> 
  <h1>Create a new user</h1>
  <hr/>
</div>

<% if @user && @user.errors.any? %>
  <div>
    <strong>Some issues with your new account, please fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container"> 
  <form method="post" action="/users">
    <div class="form-group">
      <label>Username</label>
      <input type="text" class="form-control" name="username" value="<%= @user.username %>" placeholder="Username">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="text" class="form-control" name="password" value="<%= @user.password %>" placeholder="Password">
    </div>
    <div>
      <input class="btn btn-default" type="submit" value="Create new user">
    </div>
  </form>
</div>