<div class="container"> 
  <h1>Post a new song</h1>
  <hr/>
</div>

<% if @song && @song.errors.any? %>
  <div>
    <strong>Some issues with your song, please fix them:</strong>
    <ul>
      <% @song.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container"> 
  <form method="post" action="/songs">
    <div class="form-group">
      <label>Artist</label>
      <input type="text" class="form-control" name="author" value="<%= @song.author %>" placeholder="Artist">
    </div>
    <div class="form-group">
      <label>Song Title</label>
      <input type="text" class="form-control" name="title" value="<%= @song.title %>" placeholder="Song Title">
    </div>
    <div class="form-group">
      <label>Link</label>
      <input type="text" class="form-control" name="url" value="<%= @song.url %>" placeholder="website url">
    </div>
    <div>
      <input class="btn btn-default" type="submit" value="Post!">
    </div>
  </form>
</div>